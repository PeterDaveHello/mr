{
  "name": "mr",
  "version": "2.0.2",
  "publishConfig": {
    "tag": "future"
  },
  "description": "A refresh-only CommonJS module system for browsers, used in Montage",
  "keywords": [
    "montage",
    "require",
    "commonjs",
    "module",
    "modules",
    "loader"
  ],
  "contributors": [
    "Tom Robinson",
    "Kris Kowal <kris@cixar.com> (https://github.com/kriskowal)",
    "Stuart Knightly"
  ],
  "license": {
    "type": "BSD 3-clause"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/montagejs/mr.git"
  },
  "main": "./require",
  "browser": {
    "require": "./browser",
    "url": "./mini-url"
  },
  "scripts": {
    "build": "node bin/mrs.js boot/require.js -e '().done()' > boot.js",
    "test": "npm run build && npm run test:node && npm run test:phantom && npm run lint",
    "test:node": "jasminum test",
    "test:phantom": "(cd node_modules/mr && jasminum-phantom test)",
    "lint": "jshint .",
    "integration": "MOP_VERSION=^0.13 MR_VERSION=. mop-integration"
  },
  "bin": {
    "mr": "bin/mr.js",
    "mr-phantom": "bin/mr-phantom.js",
    "mrs": "bin/mrs.js"
  },
  "dependencies": {
    "q": ">=2.0.1 <3.0.0",
    "optimist": ">=0.6.1 <0.7.0",
    "util": ">=0.10.3 <0.11.0",
    "colors": ">=0.6.2 <0.7.0",
    "istanbul": ">=0.1.34 <0.2.0"
  },
  "devDependencies": {
    "qs": "0.6.6",
    "wd": ">=0.1.5 < 0.2.0",
    "joey": ">=2.0.1 <3.0.0",
    "q-io": ">=2.0.2 <3.0.0",
    "jshint": ">=2.3.0 <3.0.0",
    "jasminum": ">=2.0.4 <3.0.0",
    "websocket.io": ">=0.2.1 <0.3.0",
    "mop-integration": "git://github.com/montagejs/mop-integration.git#master"
  },
  "exclude": [
    "README.md",
    "CHANGES.md",
    "LICENSE.md",
    "node.js",
    "adhoc.*",
    "bin",
    "demo",
    "spec"
  ],
  "translators": {
    "json": "./json-translator"
  }
}
