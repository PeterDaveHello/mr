{
  "name": "mr",
  "version": "0.13.4",
  "description": "A refresh-only CommonJS module system for browsers, used in Montage",
  "keywords": [
    "montage",
    "require",
    "commonjs",
    "module",
    "modules",
    "loader"
  ],
  "main": "./require",
  "browser": {
    "require": "./browser",
    "url": "./mini-url"
  },
  "scripts": {
    "build": "node bin/mrs.js boot/require.js -e '().done()' > boot.js",
    "test": "npm run build && npm run test:node && npm run test:phantom && npm run lint",
    "test:node": "jasminum test",
    "test:phantom": "jasminum-phantom test",
    "lint": "jshint .",
    "integration": "MOP_VERSION=^0.13 MR_VERSION=. mop-integration"
  },
  "bin": {
    "mr": "bin/mr.js",
    "mr-phantom": "bin/mr-phantom.js",
    "mrs": "bin/mrs.js"
  },
  "dependencies": {
    "q": "^2.0.0",
    "optimist": "^0.6.1",
    "util": "^0.10.3",
    "colors": "^0.6.2",
    "istanbul": "^0.1.34"
  },
  "devDependencies": {
    "qs": "^0.6.5",
    "wd": "^0.1.5",
    "joey": "^2.0.0",
    "q-io": "^2.0.0",
    "jshint": "^2.3.0",
    "jasminum": "^0.0.0",
    "websocket.io": "^0.2.1",
    "mop-integration": "git://github.com/montagejs/mop-integration.git#master"
  },
  "exclude": [
    "README.md",
    "CHANGES.md",
    "LICENSE.md",
    "node.js",
    "adhoc.*",
    "bin",
    "demo",
    "spec"
  ],
  "translators": {
    "json": "./json-translator"
  }
}
